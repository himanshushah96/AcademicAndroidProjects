<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CompanyInfoFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Info"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                />

            <ImageView
                android:layout_below="@+id/text"
                android:id="@+id/imageCompany"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageCompany"
                android:text="Company Name"
                android:textColor="@android:color/black"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/ceo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageCompany"
                android:layout_below="@+id/companyName"
                android:text="CEO:"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/sectorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageCompany"
                android:layout_below="@+id/ceo"
                android:text="Sector"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                />


            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageCompany"
                android:text="Description"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:scrollbars="vertical"
                android:lines="3"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                />



        </RelativeLayout>





    </androidx.cardview.widget.CardView>
</RelativeLayout>