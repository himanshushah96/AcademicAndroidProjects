<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_slideshow"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/verna"
        android:scaleType="centerCrop"/>



    <LinearLayout
        android:id="@+id/linearlayout_detailfrag1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_slideshow">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_detailfrag_cardetails"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:hint="Hyundai Verna 2010"
        android:textSize="25dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/textView_detailfrag_carprice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:hint="27$"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:paddingLeft="100dp"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"
        />



</LinearLayout>

        <TextView
            android:id="@+id/textView_detailfrag_availability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available date"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="bold"/>


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

         <ImageView
             android:id="@+id/imageView_calendar"
             android:layout_width="60dp"
             android:layout_height="60dp"
             app:srcCompat="@android:drawable/ic_menu_my_calendar" />

         <TextView
             android:id="@+id/textView_detailfrag_dates"
             android:layout_width="wrap_content"
             android:textAlignment="center"
             android:layout_marginTop="15dp"
             android:layout_marginLeft="30dp"
             android:layout_height="wrap_content"
             android:hint="15-10-2019"
             android:textStyle="italic"
             android:textSize="20dp"/>


     </LinearLayout>



        </LinearLayout>

    <LinearLayout

        android:id="@+id/linearlayout_detailfrag2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linearlayout_detailfrag1"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/button_booknow"
            android:layout_below="@+id/imageView_slideshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:height="50dp"
            android:width="200dp"
            android:textColor="@color/whiteColor"
            android:background="@color/colorPrimaryDark" />


        <Button
            android:id="@+id/button_Reserve"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/imageView_slideshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reserve"
            android:height="50dp"
            android:width="60dp"
            android:textColor="@color/whiteColor"
            android:background="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/button_cacelation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancelation"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/imageView_slideshow"
            android:height="50dp"
            android:width="100dp"
            android:textColor="@color/whiteColor"
            android:background="@color/colorPrimaryDark"
            />



    </LinearLayout>

    <TextView
        android:id="@+id/textView_descriptionofcar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description of car:"
        android:layout_below="@id/linearlayout_detailfrag2"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView_Description"
        android:layout_below="@+id/textView_descriptionofcar"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Description" />


</RelativeLayout >